{% extends 'main.html.twig' %}

{% block body %}

<div class="product">
    <div class="container">
        <div class="col-md-9">
            <div class="mid-popular">
                {% for p in products %}
                    <div class="col-md-4 item-grid1 simpleCart_shelfItem">
                        <div class=" mid-pop">
                            <div class="pro-img">
                                <img src="{{ asset('bundles/images/' ~ p.image ) }}" class="img-responsive" alt="">
                                <div class="zoom-icon ">
                                    <a class="picture" href="{{ asset('bundles/images/pc.jpg' ) }}" rel="title" class="b-link-stripe b-animate-go  thickbox"><i class="glyphicon glyphicon-search icon "></i></a>
                                    <a href="{{ path( 'product' , {"product_id" : p.product_id } ) }}"><i class="glyphicon glyphicon-menu-right icon"></i></a>
                                </div>
                            </div>
                            <div class="mid-1">
                                <div class="women">
                                    <div class="women-top">
                                        <span>{{ p.category_name }}</span>
                                        <h6><a href="{{ path( 'product' , {"product_id" : p.product_id } ) }}">{{ p.name }}</a></h6>
                                    </div>
                                    <div class="img item_add">
                                        <a href="#"><img src="{{ asset('bundles/images/ca.png' ) }}" alt=""></a>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="mid-2">
                                    <p ><label>${{ p.prise }}</label></p>
                                    <div class="block">
                                        <div class="starbox small ghosting"> </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="clearfix"></div>
            </div>

            <div class=" rsidebar span_1_of_left">
                <h4 class="cate">Categories</h4>
                <ul class="menu-drop">
                    {% for c in categories %}
                        <li class="item1" >
                            <a style="color: red" href="{{ path( 'products' , {"category_id" : c.id } ) }}">{{ c.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

        {% endblock %}

        {% block stylesheets %}

        {% endblock %}
